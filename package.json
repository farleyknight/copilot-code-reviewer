{
  "name": "copilot-code-reviewer",
  "displayName": "Copilot Code Reviewer",
  "description": "A VS Code extension to empower Copilot with code review capabilities.",
  "version": "0.0.1",
  "publisher": "farleyknight",
  "repository": {
    "type": "git",
    "url": "https://github.com/farleyknight/copilot-code-reviewer.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "AI",
    "Linters"
  ],
  "keywords": [
    "copilot",
    "code review",
    "review",
    "ai",
    "github",
    "developer tools"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-code-reviewer.startReview",
        "title": "Copilot: Start Code Review"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "rm -rf out/* && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1"
  }
}
